{
  "name": "@tarsilla/commit-wizard",
  "version": "0.2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22"
  },
  "exports": {
    "./commitizen": {
      "require": "./lib/commitizen/index.cjs",
      "default": "./lib/commitizen/index.cjs"
    },
    "./commitlint": {
      "require": "./lib/commitlint/index.cjs",
      "default": "./lib/commitlint/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib/*",
    "src/*",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "tsc": "tsc --noEmit",
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run lint && npm run tsc && rollup -c",
    "prepub": "npm run build",
    "pub": "npm publish --access public",
    "prepare": "husky"
  },
  "peerDependencies": {
    "@commitlint/cli": "^19",
    "@commitlint/config-conventional": "^19",
    "commitizen": "^4"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-swc": "^0.4.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/inquirer": "^8.2.10",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.2.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "rollup": "^4.36.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semantic-release": "^24.2.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  }
}
